inherit mono gnome2

DESCRIPTION="GNOME subtitle editor"
HOMEPAGE="http://gnome-subtitles.sourceforge.net/"
SRC_URI=mirror://sourceforge/${PN}/${P}.tar.gz

DIFF_EXCLUDES="gnome-subtitles.desktop AssemblyInfo.cs"

src_compile() {
	cd ${S}
	gnome2_autoreconf

	for d in gstreamer-playbin-*
	do
		mkdir -p ${B}/${d}
	done

	cd ${B}
	gnome2_compile
}
